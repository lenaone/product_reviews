<link rel="stylesheet" href="/stylesheets/input_form.css">
<div class="signup-form"> 
  <form action="/sign_up" class="text-center p-5" method="post">
    <div class="container">
      <p class="h4 mb-4" style="font-size: 30px; margin: 20px;">Sign up</p>

      <label class="signupform-detail">name</label>
      <input type="text" name="name" class="form-control" placeholder="name">

      <label class="signupform-detail">E-mail</label>
      <input type="text" name="email" class="form-control" placeholder="E-mail">

      <label class="signupform-detail">password</label>
      <input type="password" name="password" class="form-control" placeholder="Password">

      <button class="btn btn-info my-4 btn-block" type="submit">sign up</button>
    </div>
  </form>
</div>
